<% if (success && success.length) { %>
    <div class="row mt-3">
        <div class="alert alert-success alert-dismissible fade show col-lg-6 col-md-8 col-sm-10 offset-lg-3 offset-md-2 offset-sm-1" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    <% } %>
    
    <% if (error && error.length) { %>
    <div class="row mt-3">
        <div class="alert alert-danger alert-dismissible fade show col-lg-6 col-md-8 col-sm-10 offset-lg-3 offset-md-2 offset-sm-1" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    <% } %>
    